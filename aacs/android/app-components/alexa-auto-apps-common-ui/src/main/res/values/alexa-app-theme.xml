<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlexaAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorForeground">@color/textColor</item>

        <item name="headerText">@style/AlexaAppTheme.HeaderText</item>
        <item name="bodyText">@style/AlexaAppTheme.BodyText</item>
        <item name="utteranceText">@style/AlexaAppTheme.UtteranceText</item>
        <item name="largeBoldText">@style/AlexaAppTheme.LargeBoldText</item>
        <item name="smallBoldText">@style/AlexaAppTheme.SmallBoldText</item>
        <item name="interactiveText">@style/AlexaAppTheme.InteractiveText</item>
        <item name="button">@style/AlexaAppTheme.SecondaryButton</item>
        <item name="button2">@style/AlexaAppTheme.PrimaryButton</item>
    </style>

    <style name="AlexaAppTheme.HeaderText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?android:attr/colorForeground</item>
    </style>

    <style name="AlexaAppTheme.BodyText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?android:attr/colorForeground</item>
    </style>

    <style name="AlexaAppTheme.UtteranceText">
        <item name="fontFamily">@font/bookerly_it</item>
        <item name="android:textStyle">italic</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">?android:attr/colorForeground</item>
    </style>

        <style name="AlexaAppTheme.LargeBoldText" parent="android:TextAppearance.DeviceDefault.Large">
            <item name="android:textSize">125sp</item>
            <item name="android:textColor">?android:attr/colorForeground</item>
        </style>

        <style name="AlexaAppTheme.SmallBoldText" parent="android:TextAppearance.DeviceDefault.Large">
            <item name="android:textSize">49sp</item>
            <item name="android:textColor">?android:attr/colorForeground</item>
        </style>

        <style name="AlexaAppTheme.InteractiveText" parent="android:TextAppearance.DeviceDefault.Small">
            <item name="android:textSize">30sp</item>
            <item name="android:textColor">?android:attr/colorForeground</item>
        </style>

        <style name="AlexaAppTheme.SecondaryButton" parent="android:Widget.DeviceDefault.Button">
            <item name="android:textSize">32sp</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:minHeight">76dp</item>
            <item name="android:background">@color/secondaryButtonBackgroundColor</item>
            <item name="android:textColor">@color/secondaryButtonTextColor</item>
        </style>

        <style name="AlexaAppTheme.PrimaryButton" parent="android:Widget.DeviceDefault.Button">
            <item name="android:textSize">32sp</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:minHeight">76dp</item>
            <item name="android:background">@color/primaryButtonBackgroundColor</item>
            <item name="android:textColor">@color/primaryButtonTextColor</item>
        </style>
</resources>