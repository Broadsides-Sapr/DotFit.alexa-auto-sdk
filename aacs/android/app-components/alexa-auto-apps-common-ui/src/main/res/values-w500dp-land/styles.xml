<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DeviceDefaults" parent="android:Theme.DeviceDefault.NoActionBar">

<!--        <item name="android:colorBackground">?android:attr/colorBackground</item>-->
<!--        <item name="android:colorForeground">?android:attr/colorForeground</item>-->
<!--        <item name="android:colorPrimary">?android:attr/colorPrimary</item>-->
<!--        <item name="android:"-->

        <item name="headerText">@style/headerTextDeviceDefault</item>
        <item name="bodyText">@style/bodyTextDeviceDefault</item>
        <item name="utteranceText">@style/utteranceTextDeviceDefault</item>
        <item name="largeBoldText">@style/largeBoldTextDeviceDefault</item>
        <item name="smallBoldText">@style/smallBoldTextDeviceDefault</item>
        <item name="interactiveText">@style/interactiveTextDeviceDefault</item>
        <item name="button">@style/buttonDeviceDefault</item>
        <item name="button2">@style/button2DeviceDefault</item>
    </style>

    <style name="DeviceDefaults.Dialog" parent="android:Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
    </style>

    <style name="AlexaDeviceDefault" parent="Theme.AppCompat.NoActionBar">
        <!-- styles -->
        <item name="headerText">@style/headerTextDeviceDefault</item>
        <item name="bodyText">@style/bodyTextDeviceDefault</item>
        <item name="utteranceText">@style/utteranceTextDeviceDefault</item>
        <item name="largeBoldText">@style/largeBoldTextDeviceDefault</item>
        <item name="smallBoldText">@style/smallBoldTextDeviceDefault</item>
        <item name="interactiveText">@style/interactiveTextDeviceDefault</item>
        <item name="button">@style/buttonDeviceDefault</item>
        <item name="button2">@style/button2DeviceDefault</item>
    </style>

    <!--text styles-->

    <style name="headerTextDeviceDefault" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="bodyTextDeviceDefault" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="utteranceTextDeviceDefault">
        <item name="fontFamily">@font/bookerly_it</item>
        <item name="android:textStyle">italic</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">37sp</item>
        <item name="android:textColor">?android:attr/colorForeground</item>
    </style>

    <style name="buttonDeviceDefault" parent="android:Widget.DeviceDefault.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button2DeviceDefault" parent="android:Widget.DeviceDefault.Button.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="largeBoldTextDeviceDefault" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="smallBoldTextDeviceDefault" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="interactiveTextDeviceDefault" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">23sp</item>
    </style>

    <!--...-->

    <style name="AlexaStandard" parent="Theme.Alexa.Standard">
        <item name="headerText">@style/headingTextAlexaStandard</item>
        <item name="bodyText">@style/titleTextAlexaStandard</item>
        <item name="utteranceText">@style/subtitleTextAlexaStandard</item>
        <item name="largeBoldText">@style/largeBoldTextDeviceDefault</item>
        <item name="smallBoldText">@style/smallBoldTextDeviceDefault</item>
        <item name="interactiveText">@style/interactiveTextDeviceDefault</item>
        <item name="button">@style/buttonAlexaStandard</item>
        <item name="button2">@style/button2AlexaStandard</item>
    </style>

    <style name="headingTextAlexaStandard" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/amazonember_rg</item>
    </style>

    <style name="titleTextAlexaStandard" parent="headingTextAlexaStandard">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="Alexa.HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/amazonember_rg</item>
    </style>

    <style name="subtitleTextAlexaStandard" parent="headingTextAlexaStandard">
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="buttonAlexaStandard" parent="headingTextAlexaStandard">
        <item name="android:textColor">@color/White</item>
        <item name="android:backgroundTint">@color/Abbey</item>
        <item name="android:background">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="button2AlexaStandard" parent="headingTextAlexaStandard">
        <item name="android:textColor">@color/Black</item>
        <item name="android:backgroundTint">@color/White</item>
        <item name="android:background">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!--4.1 General UI Guideline dimensions-->
    <!--subject to change for 4.2-->
    <!--universal-->

    <style name="Alexa.TitleText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="Alexa.SubtitleText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="Alexa.UtteranceText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/utterance_font_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/bookerly_it</item>
    </style>

    <style name="Alexa.Button" parent="Alexa.HeadingText">
        <item name="android:textColor">@color/White</item>
        <item name="android:backgroundTint">@color/Abbey</item>
        <item name="android:background">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Alexa.Button2" parent="Alexa.HeadingText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:backgroundTint">@color/White</item>
        <item name="android:background">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--END of 4.1 General UI Guideline dimensions-->

    <style name="Alexa.Heading1Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading1_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Alexa.Heading1TextNormal" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading1_font_size</item>
    </style>

    <style name="Alexa.Heading2Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading2_font_size</item>
    </style>

    <style name="Alexa.Heading3Text" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/heading3_font_size</item>
    </style>

    <style name="Alexa.BodyText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="bodyTextAlexaStandard" parent="headingTextAlexaStandard">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="Alexa.SmallBodyText" parent="Alexa.HeadingText">
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <style name="Alexa.HintText" parent="Alexa.HeadingText">
        <item name="android:textColor">?attr/hintColorOnBackground</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="Alexa.Hint2Text" parent="Alexa.HeadingText">
        <item name="android:textColor">?attr/hintColorOnBackground</item>
        <item name="android:fontFamily">@font/bookerly_it</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Alexa.SmallButton" parent="Alexa.Button">
        <item name="android:background">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:textSize">@dimen/small_body_font_size</item>
    </style>

    <style name="Alexa.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Alexa.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>
</resources>