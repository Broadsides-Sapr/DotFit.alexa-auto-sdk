<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_favorites_consent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <!--Next 3 guidelines describe the default margins that the visible elements are constrained to-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/setup_bottom_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/left_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/right_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.225" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_view_image_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.835" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.667" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.833" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.917" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/use_nav_favorites_button_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/use_nav_favorites_button_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.667" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.242" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.708" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.241" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.442" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alexa_hint2_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alexa_hint2_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.625" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.917" />

    <!--Alexa logo-->
    <ImageView
        android:id="@+id/location_illustration_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/navi_illustration"
        app:layout_constraintTop_toBottomOf="@id/location_illustration_image_view_upper_bound"
        app:layout_constraintBottom_toTopOf="@id/location_illustration_image_view_lower_bound"
        app:layout_constraintStart_toEndOf="@id/location_illustration_image_view_left_bound"
        app:layout_constraintEnd_toStartOf="@id/location_illustration_image_view_right_bound"
        android:scaleType="fitEnd" />

    <!--Utterance-->
    <TextView
        android:id="@+id/alexa_hint2"
        style="@style/Alexa.UtteranceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nav_favorites_permission_hint_text"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toEndOf="@id/alexa_hint2_left_bound"
        app:layout_constraintTop_toBottomOf="@id/alexa_hint2_upper_bound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="36sp" />

    <!-- Title text-->
    <TextView
        android:id="@+id/nav_favorites_permission_header_view"
        style="?attr/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/nav_favorites_permission_header_text"
        app:layout_constraintStart_toEndOf="@id/text_view_left_bound"
        app:layout_constraintEnd_toStartOf="@id/text_view_right_bound"
        app:layout_constraintBottom_toTopOf="@id/nav_favorites_permission_text_view"
        android:layout_marginBottom="10dp"
        android:textSize="40sp" />

    <!--Subtitle text-->
    <TextView
        android:id="@+id/nav_favorites_permission_text_view"
        style="?attr/bodyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/nav_favorites_permission_body_text"
        app:layout_constraintBottom_toTopOf="@id/alexa_hint2"
        app:layout_constraintStart_toEndOf="@id/text_view_left_bound"
        app:layout_constraintEnd_toStartOf="@id/text_view_right_bound"
        android:layout_marginBottom="20dp"
        android:textSize="34sp" />

        <!-- Skip button-->
    <TextView
        android:id="@+id/setup_skip_button_view"
        style="?attr/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_permission_button_text"
        app:layout_constraintBottom_toTopOf="@id/setup_skip_button_view_lower_bound"
        app:layout_constraintEnd_toStartOf="@id/setup_skip_button_view_right_bound"
        app:layout_constraintStart_toStartOf="@id/setup_skip_button_view_left_bound"
        app:layout_constraintTop_toBottomOf="@id/setup_skip_button_view_upper_bound" />

    <!--Consent button-->
    <TextView
        android:id="@+id/use_nav_favorites_button_view"
        style="?attr/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consent_agree_text"
        app:layout_constraintBottom_toTopOf="@id/setup_skip_button_view_lower_bound"
        app:layout_constraintEnd_toStartOf="@id/use_nav_favorites_button_view_right_bound"
        app:layout_constraintStart_toEndOf="@id/use_nav_favorites_button_view_left_bound"
        app:layout_constraintTop_toBottomOf="@id/setup_skip_button_view_upper_bound" />


</androidx.constraintlayout.widget.ConstraintLayout>
