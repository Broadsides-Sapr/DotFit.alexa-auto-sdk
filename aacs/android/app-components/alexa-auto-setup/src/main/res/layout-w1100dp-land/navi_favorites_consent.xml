<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_favorites_consent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <!--Next 3 guidelines describe the default margins that the visible elements are constrained to-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/setup_bottom_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/left_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/right_margin_percentage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.083" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_view_image_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navi_illustration_image_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.708" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.833" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.925" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.375" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setup_skip_button_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/use_nav_favorites_button_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/use_nav_favorites_button_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_lower_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.709" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.087" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/location_illustration_image_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.377" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nav_favorites_permission_header_view_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.458" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nav_favorites_permission_header_view_right_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.917" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alexa_hint2_left_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alexa_hint2_upper_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.608" />

    <!--Alexa logo-->
    <ImageView
        android:id="@+id/location_illustration_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/navi_illustration"
        app:layout_constraintBottom_toTopOf="@id/location_illustration_image_view_lower_bound"
        app:layout_constraintEnd_toStartOf="@id/location_illustration_image_view_right_bound"
        app:layout_constraintStart_toEndOf="@id/location_illustration_image_view_left_bound"
        app:layout_constraintTop_toBottomOf="@id/location_illustration_image_view_upper_bound" />

    <!--Utterance-->
    <TextView
        android:id="@+id/alexa_hint2"
        style="@style/Alexa.UtteranceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="19sp"
        android:paddingTop="13sp"
        android:paddingRight="19sp"
        android:paddingBottom="13sp"
        android:text="@string/nav_favorites_permission_hint_text"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/setup_skip_button_view_right_bound"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/alexa_hint2_left_bound"
        app:layout_constraintTop_toBottomOf="@id/alexa_hint2_upper_bound"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Title text-->
    <TextView
        android:id="@+id/nav_favorites_permission_header_view"
        style="?attr/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center_vertical"
        android:text="@string/nav_favorites_permission_header_text"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/nav_favorites_permission_text_view"
        app:layout_constraintEnd_toStartOf="@id/nav_favorites_permission_header_view_right_bound"
        app:layout_constraintStart_toEndOf="@id/use_nav_favorites_button_view_left_bound"
        app:layout_constraintTop_toBottomOf="@id/location_illustration_image_view_upper_bound"
        app:layout_constraintVertical_chainStyle="packed" />

    <!--Subtitle text-->
    <TextView
        android:id="@+id/nav_favorites_permission_text_view"
        style="?attr/bodyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/nav_favorites_permission_body_text"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/alexa_hint2"
        app:layout_constraintEnd_toStartOf="@id/nav_favorites_permission_header_view_right_bound"
        app:layout_constraintStart_toEndOf="@id/use_nav_favorites_button_view_left_bound"
        app:layout_constraintTop_toBottomOf="@id/nav_favorites_permission_header_view" />


    <!-- Skip button-->
    <TextView
        android:id="@+id/setup_skip_button_view"
        style="?attr/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_permission_button_text"
        android:textAllCaps="false"
        android:layout_marginEnd="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/setup_skip_button_view_lower_bound"
        app:layout_constraintEnd_toStartOf="@id/use_nav_favorites_button_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setup_skip_button_view_upper_bound" />

    <!--Consent button-->
    <TextView
        android:id="@+id/use_nav_favorites_button_view"
        style="?attr/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consent_agree_text"
        android:textAllCaps="false"
        android:layout_marginStart="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/setup_skip_button_view_lower_bound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/setup_skip_button_view"
        app:layout_constraintTop_toBottomOf="@id/setup_skip_button_view_upper_bound" />


</androidx.constraintlayout.widget.ConstraintLayout>
